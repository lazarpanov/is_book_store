@model List<EShop.Domain.Domain.PartnerBook>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="container">
    <div class="m-3">
        <a asp-action="Create">Create New</a>

    </div>

    @for(int i=0;i<Model.Count; i++)
    {
        var item = Model[i];
        if(i % 3 == 0)
        {
            @:<div class="row">
        }
        <div class="col-3 m-4">

            <div class="card" style="width: 18rem; height: 45rem">
                <img class="card-img-top" src="@item.imageURL" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@item.title - @item.author</h5>
                    <p class="card-text">@item.description</p>
                    <p class="card-text">Page count: @item.totalPages</p>
                    <p class="card-text">Publisher: @item.publisher</p>
                    <p class="card-text">Isbn: @item.isbn</p>
                    <h6>Price: @item.price</h6>
                </div>
